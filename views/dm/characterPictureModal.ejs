<div class="modal" tabindex="-1" role="dialog" id="pictureModal">
  <div id="picture-btn-container">
    <button type="button" class="btn btn-secondary" id="picture-cancel-btn" data-dismiss="modal">X</button>
    <button type="button" class="btn btn-success" id="picture-save-btn"><i class="ra ra-save"></i></button>
  </div>
  <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div id="profile-picture-container">
          <img id="profile-picture" src="" />
        </div>

        <ul class="nav nav-pills mb-3" id="nav-picture-tab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="nav-picture-upload-tab" data-toggle="pill" href="#nav-picture-upload" role="tab" aria-controls="nav-picture-upload" aria-selected="true">Upload File</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="nav-picture-camera-tab" data-toggle="pill" href="#nav-picture-camera" role="tab" aria-controls="nav-picture-camera" aria-selected="false">Camera</a>
          </li>
        </ul>
        <div class="tab-content" id="nav-tabContent">
          <div class="tab-pane show active" id="nav-picture-upload" role="tabpanel" aria-labelledby="nav-home-tab">
            <input type="file" name="profile-picture" id="profile-picture-input" class="form-control" />
          </div>
          <div class="tab-pane" id="nav-picture-camera" role="tabpanel" aria-labelledby="nav-profile-tab">
            <button type="button" class="btn btn-info" id="take-picture-btn"><i class="ra ra-bleeding-eye ra-2x"></i></button>
            <button id="toggle-video-btn" class="btn btn-warning">Toggle Camera</button>
            <div id="video-container">
              <video autoplay="true" playsinline id="video-element">No Camera Available</video>
            </div>
            <canvas id="profile-picture-canvas"></canvas>
          </div>
        </div>
      </div>
  </div>
</div>